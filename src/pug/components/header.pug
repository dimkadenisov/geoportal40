mixin header(props = {})
  include logo
  include main-menu
  include button

  .header&attributes(attributes)
    .container
      .header__inner
        +logo
        +main-menu({
          items: [
            {
              text: 'О проекте',
              href: './about-project.html'
            },
            {
              text: 'Каталог данных',
              href: './data-catalog.html'
            },
            {
              text: 'Контакты',
              href: './contacts.html'
            },
          ]
        })
        +button({tag: 'a', text: 'Войти'})(class="button_shadow")
